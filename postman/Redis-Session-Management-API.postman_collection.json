{
  "info": {
    "name": "Spring Boot gRPC - Redis Session Management",
    "description": "API collection for testing Redis session management in the API Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
