        {
          "name": "5. Get Active Session Count",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test: Status code is 200",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "// Test: Response has session count",
                  "pm.test('Response has activeSessionCount', function () {",
                  "    pm.expect(jsonData).to.have.property('activeSessionCount');",
                  "    pm.expect(jsonData.activeSessionCount).to.be.a('number');",
                  "});",
                  "",
                  "// Test: Count is non-negative",
                  "pm.test('Session count is non-negative', function () {",
                  "    pm.expect(jsonData.activeSessionCount).to.be.at.least(0);",
                  "});",
                  "",
                  "// Log session count",
                  "console.log('üìä Active Sessions:', jsonData.activeSessionCount);",
                  "",
                  "// Save count for further testing",
                  "pm.collectionVariables.set('activeSessionCount', jsonData.activeSessionCount);",
                  "",
                  "// Performance indicator",
                  "if (jsonData.activeSessionCount > 100) {",
                  "    console.log('‚ö° High session count - good for load testing!');",
                  "} else if (jsonData.activeSessionCount > 0) {",
                  "    console.log('‚úÖ Sessions are active');",
                  "} else {",
                  "    console.log('‚ÑπÔ∏è No active sessions');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/count",
