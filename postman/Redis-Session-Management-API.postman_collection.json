  "item": [
    {
      "name": "Session Management",
      "item": [
        {
          "name": "1. Login (Create Session)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test: Status code is 200",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test: Response time is acceptable",
                  "pm.test('Response time is less than 200ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(200);",
                  "});",
                  "",
                  "// Test: Content-Type is JSON",
                  "pm.test('Content-Type is JSON', function () {",
                  "    pm.response.to.have.header('Content-Type');",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "});",
                  "",
                  "// Parse response and run tests",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    ",
                  "    // Test: Response has required fields",
                  "    pm.test('Response has sessionId', function () {",
                  "        pm.expect(jsonData).to.have.property('sessionId');",
                  "        pm.expect(jsonData.sessionId).to.not.be.empty;",
                  "    });",
                  "    ",
                  "    pm.test('Response has userId', function () {",
                  "        pm.expect(jsonData).to.have.property('userId');",
                  "        pm.expect(jsonData.userId).to.eql('john.doe');",
                  "    });",
                  "    ",
                  "    pm.test('Response has success message', function () {",
                  "        pm.expect(jsonData).to.have.property('message');",
                  "        pm.expect(jsonData.message).to.eql('Login successful');",
                  "    });",
                  "    ",
                  "    // Test: Session cookie is set",
                  "    pm.test('SESSION cookie is set', function () {",
                  "        pm.expect(pm.cookies.has('SESSION')).to.be.true;",
                  "    });",
                  "    ",
                  "    // Save session ID for subsequent requests",
                  "    pm.collectionVariables.set('sessionId', jsonData.sessionId);",
                  "    pm.collectionVariables.set('userId', jsonData.userId);",
                  "    ",
                  "    // Log session info",
                  "    console.log('‚úÖ Session created:', jsonData.sessionId);",
                  "    console.log('üë§ User:', jsonData.userId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john.doe\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/session/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "login"]
            },
            "description": "Create a new session by logging in. The session ID is saved automatically."
          },
          "response": []
        },
        {
          "name": "2. Get Session Info",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test: Status code is 200",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test: Response time",
                  "pm.test('Response time is acceptable', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(100);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "// Test: Session info has required fields",
                  "pm.test('Session info has sessionId', function () {",
                  "    pm.expect(jsonData).to.have.property('sessionId');",
                  "    pm.expect(jsonData.sessionId).to.not.be.empty;",
                  "});",
                  "",
                  "pm.test('Session info has userId', function () {",
                  "    pm.expect(jsonData).to.have.property('userId');",
                  "    pm.expect(jsonData.userId).to.not.be.null;",
                  "});",
                  "",
                  "pm.test('Session has timestamps', function () {",
                  "    pm.expect(jsonData).to.have.property('creationTime');",
                  "    pm.expect(jsonData).to.have.property('lastAccessedTime');",
                  "    pm.expect(jsonData.creationTime).to.be.a('number');",
                  "});",
                  "",
                  "pm.test('Session has maxInactiveInterval', function () {",
                  "    pm.expect(jsonData).to.have.property('maxInactiveInterval');",
                  "    pm.expect(jsonData.maxInactiveInterval).to.be.greaterThan(0);",
                  "});",
                  "",
                  "// Log session details",
                  "console.log('üìã Session ID:', jsonData.sessionId);",
                  "console.log('üë§ User ID:', jsonData.userId);",
                  "console.log('‚è∞ Created:', new Date(jsonData.creationTime));",
                  "console.log('‚è± Timeout:', jsonData.maxInactiveInterval, 'seconds');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/info",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "info"]
            },
            "description": "Retrieve current session information. Cookie is sent automatically."
          },
          "response": []
        },
        {
          "name": "3. Set Session Attribute",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test: Status code is 200",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "// Test: Success message",
                  "pm.test('Attribute set successfully', function () {",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData.message).to.eql('Attribute set successfully');",
                  "});",
                  "",
                  "// Test: Returned key and value",
                  "pm.test('Key and value are returned', function () {",
                  "    pm.expect(jsonData).to.have.property('key');",
                  "    pm.expect(jsonData).to.have.property('value');",
                  "    pm.expect(jsonData.key).to.eql('theme');",
                  "    pm.expect(jsonData.value).to.eql('dark');",
                  "});",
                  "",
                  "// Log attribute info",
                  "console.log('üè∑ Attribute Set:');",
                  "console.log('  Key:', jsonData.key);",
                  "console.log('  Value:', jsonData.value);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/attribute?key=theme&value=dark",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "attribute"],
              "query": [
                {
                  "key": "key",
                  "value": "theme"
                },
                {
                  "key": "value",
                  "value": "dark"
                }
              ]
            },
            "description": "Set a custom session attribute"
          },
          "response": []
