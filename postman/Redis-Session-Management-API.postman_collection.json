                  "});",
                  "",
                  "// Log health status",
                  "console.log('üè• Health Check Results:');",
                  "console.log('  Service:', jsonData.service, '-', jsonData.status);",
                  "console.log('  Redis:', jsonData.redis);",
                  "",
