                  "var jsonData = pm.response.json();",
                  "",
                  "// Test: Logout successful",
                  "pm.test('Logout message is correct', function () {",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData.message).to.eql('Logout successful');",
                  "});",
                  "",
                  "pm.test('Session ID is returned', function () {",
                  "    pm.expect(jsonData).to.have.property('sessionId');",
                  "    pm.expect(jsonData.sessionId).to.not.be.empty;",
                  "});",
                  "",
                  "// Log logout info",
                  "console.log('üö™ Logged out from session:', jsonData.sessionId);",
                  "",
                  "// Clear session variables",
                  "pm.collectionVariables.set('sessionId', '');",
                  "pm.collectionVariables.set('userId', '');",
                  "",
                  "console.log('‚úÖ Session variables cleared');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/session/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "session", "logout"]
            },
            "description": "Logout and invalidate the current session"
          },
          "response": []
        }
